<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- My styles -->
    <style name="TopButtonStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_marginTop">@dimen/ButtonTopBottomMargin</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="BottomButtonStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_marginBottom">@dimen/ButtonTopBottomMargin</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
